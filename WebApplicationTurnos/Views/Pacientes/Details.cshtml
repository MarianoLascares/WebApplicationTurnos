@model WebApplicationTurnos.Models.Pacientes

<h4>Pacientes</h4>
<div class="row">
    <div class="col s12 m6">
        <div class="card hoverable green lighten-5">
            <div class="card-content">
                <span class="card-title"><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model => model.Apellido)</b></span>

                <p>
                    @Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)
                </p>
                <hr />
                <p>
                    @Html.DisplayNameFor(model => model.Apellido) : @Html.DisplayFor(model => model.Apellido)
                </p>
                <hr />
                <p>
                    @Html.DisplayNameFor(model => model.Direccion) : @Html.DisplayFor(model => model.Direccion)
                </p>
                <hr />
                <p>
                    @Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(model => model.Telefono)
                </p>
                <hr />
                <p>
                    @Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)
                </p>
            </div>
            <div class="card-action blue-grey darken-2">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                    <a asp-action="Index" class="right">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>