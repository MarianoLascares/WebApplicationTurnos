@model WebApplicationTurnos.Models.Especialidad

<h4>Seguro de eliminar el siguiente registro?</h4>
<div>
    <h5>Especialidad</h5>
    <hr />
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable orange lighten-5">
                <div class="card-content">
                    <span class="card-title"><b>@Html.DisplayFor(model => model.Descripcion)</b></span>
                    <p>
                        @Html.DisplayNameFor(modelo => modelo.Descripcion) : @Html.DisplayFor(modelo => modelo.Descripcion)
                    </p>
                </div>
                <div class="card-action blue-grey darken-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="waves-effect waves-light btn-small orange lighten-2" />
                        <a asp-action="Index" class="right">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>